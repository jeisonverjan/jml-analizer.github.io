{{#if success_msg}}
  <div class="alert">
    <span
      class="closebtn"
      onclick="this.parentElement.style.display='none';"
    >&times;</span>
    {{success_msg}}
  </div>
{{/if}}

{{#if error_msg}}
  <div class="alert alert-error">
    <span
      class="closebtn"
      onclick="this.parentElement.style.display='none';"
    >&times;</span>
    {{error_msg}}
  </div>
{{/if}}
